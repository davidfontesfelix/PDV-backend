{
  "openapi": "3.0.0",
  "info": {
    "title": "API PDV",
    "description": "Api de controle de ponto de venda",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://pdv-backend-psi.vercel.app/",
      "description": "URL de produção"
    }
  ], 
  "paths": {
    "/users": {
      "get": {
        "summary": "Exibir todos os users",
        "tag": ["user"]
      }
    },
    "/user/:id": {
      "get": {
        "summary": "Procurar o user pela id",
        "parameters": [
          {
            "name": "Bearer Token",
            "in": "Authorization",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    },
    "/register" : {
      "post": {
        "summary": "Criar usuários",
        "tag": ["user"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "lastname": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string min 8 length"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "logar usuário",
        "description": "Vai verificar os dados e se for encontrado vai retorna que está autorizado",
        "tag": ["user"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string min 8 length"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/edit/:id": {
      "put": {
        "summary": "editar usuário",
        "description": "Rota para editar dados do usuário",
        "tag": ["user"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "lastname": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string min 8 length"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/delete/:id": {
      "delete": {
        "summary": "Deletar um usuário",
        "tag": ["user"]
      }
    },
    "/products": {
      "get": {
        "summary": "Recebe uma Array de todos os produtos",
        "tag": ["product"]
      }
    },
    "/products/register" : {
      "post": {
        "summary": "Criar produto",
        "tag": ["product"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "code": {
                    "type": "number min length 13"
                  },
                  "name": {
                    "type": "string"
                  },
                  "category": {
                    "type": "string"
                  },
                  "price": {
                    "type": "number"
                  },
                  "amount": {
                    "type": "string min 8 length"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/edit/:code" : {
      "put": {
        "summary": "Editar produto",
        "tag": ["product"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "lastname": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string min 8 length"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/products/delete/:code": {
      "delete": {
        "summary": "Deletar um produto",
        "tag": ["product"]
      }
    },
    "/categories": {
      "get": {
        "summary": "Recebe uma Array de todas as categorias",
        "tag": ["product"]
      }
    },
    "/categories/register" : {
      "post": {
        "summary": "Criar categoria",
        "tag": ["category"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/edit/:id" : {
      "put": {
        "summary": "Editar categoria",
        "tag": ["category"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "description": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/categories/delete/:id": {
      "delete": {
        "summary": "Deletar uma categoria",
        "tag": ["category"]
      }
    }
  }
}