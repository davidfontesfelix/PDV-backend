{
  "openapi": "3.0.0",
  "info": {
    "title": "API PDV",
    "description": "Api de controle de ponto de venda",
    "version": "1.0.0"
  },
  "servers": [
    {
      "url": "https://pdv-backend-psi.vercel.app/",
      "description": "URL de produção"
    }
  ], 
  "paths": {
    "/users": {
      "get": {
        "summary": "exibir todos os users",
        "tag": ["user"]
      }
    },
    "/user/:id": {
      "get": {
        "summary": "procurar o user pela id",
        "parameters": [
          {
            "name": "Bearer Token",
            "in": "Authorization",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ]
      }
    },
    "/register" : {
      "post": {
        "summary": "criar usuários",
        "tag": ["user"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "lastname": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string min 8 length"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/login": {
      "post": {
        "summary": "logar usuário",
        "description": "vai verificar os dados e se for encontrado vai retorna que está autorizado",
        "tag": ["user"],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string min 8 length"
                  }
                }
              }
            }
          }
        }
      }
    }
  }
}